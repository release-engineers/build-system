#!/usr/bin/env bash
#
# Run from the root of your project to detect applicable scripts.
#
set -e
set -o pipefail

build_match=0

if [ -f pyproject.toml ]; then
  build_poetry "$@"
  build_match=1
fi

if [ -f Dockerfile ]; then
  build_docker "$@"
  build_match=1
fi

if [ "${build_match}" -eq 0 ]; then
  printf -- "-- \033[0;36m[system] nothing to build\033[0m\n"
fi
