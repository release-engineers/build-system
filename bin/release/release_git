#!/usr/bin/env bash
set -e
set -o pipefail

version=$(release_version)
if [ -n "$(git tag --list "v${version}")" ]; then
  printf -- "-- \033[0;36m[poetry] git tag v%s already exists.\033[0m\n" "${version}"
  exit 0
fi

git tag "v${version}"
git push --tags

version_minor=$(echo "${version}" | cut -d'.' -f2)
version_major=$(echo "${version}" | cut -d'.' -f1)
git tag --force "v${version_major}.${version_minor}"
git tag --force "v${version_major}"
git push --force --tags
